#include <iostream>
#include <Windows.h>

using namespace std;

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    cout << "Введите пол: " << endl;
    string male{};
    cin >> male;
    if (male == "мужской" || male == "муж" || male == "м") {
        male = "мужской";
    }
    else {
        male = "женский";
    }

    cout << "Введите знак зодиака: " << endl;
    string znak;
    cin >> znak;
    if (znak == "Рак" || znak == "рак" || znak == "Скорпион" || znak == "скорпион" || znak == "Рыбы" || znak == "рыбы") {
        znak = "a";
    }
    else if (znak == "Телец" || znak == "телец" || znak == "Дева" || znak == "дева" || znak == "Козерог" || znak == "козерог") {
        znak = "b";
    }
    else {
        cout << "Гороскоп для вас находится в разработке. Приходите чуточку позже ;)" << endl;
    }
    cout << "Введите возраст: " << endl;
    int age{};
    cin >> age;
    if (male == "мужской" && age < 40 && znak == "a") {
        cout << "Ваше предсказание: Сегодня очень плодотворный день. Можно добиться того, что прежде казалось почти невозможным. " << endl;
    }
    else if (male == "женский" && (age > 15 && age <= 30 && znak == "b")) {
        cout << "Ваше предсказание: Сегодняшний вечер подходит для общения с друзьями, проведения домашних праздников и импровизированных вечеринок. Будет не только весело, но и интересно: найдётся дело, которое увлечёт всех." << endl;
    }
    else {
        cout << "Ваше предсказание: Гороскоп для вас находится в разработке. Приходите чуточку позже ;)" << endl;
    }

    return 0;
}
