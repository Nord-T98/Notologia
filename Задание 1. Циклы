#include <iostream>
using namespace std;

int main() {
    int number;
    int sum = 0;
    
    while (true) {
        cout << "Введите целое число или число '0', чтобы закончить: ";
        cin >> number;
        
        if (number == 0) {
            break;
        }
        
        sum += number;
    }
    
    cout << "Сумма: " << sum << endl;
    
    return 0;
}
